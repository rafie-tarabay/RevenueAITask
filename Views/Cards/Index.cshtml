@model IEnumerable<RevenueAITask.Models.Card>

@{
    ViewData["Title"] = "Index";
}

<h1>Cards</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardType.CardType1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.Currency1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateDescription)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.CardNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CardNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CardNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
